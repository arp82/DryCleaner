<Window x:Class="TintoreriaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row ="0" Background="Green" Content="COLLECT" Command="{Binding CollectCommand}"/>
        <Button Grid.Row ="1" Background="Blue" Content="DELIVERY" Command="{Binding DeliveryCommand}"/>
        <Button Grid.Row ="2" Background="Orange" Content="SEARCH TICKETS" Command="{Binding SearchTicketsCommand}"/>
        <Button Grid.Row ="3" Background="Yellow" Content="REPORTS" Command="{Binding OpenReportsCommand}"/>
    </Grid>
</Window>
